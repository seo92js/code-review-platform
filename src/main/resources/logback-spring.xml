<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 로그 경로 설정 -->
    <property name="LOG_PATH" value="./logs"/>

    <!-- 콘솔 출력 패턴 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %magenta([%thread]) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- PROD 프로필일 때만 파일 로그 활성화 -->
    <springProfile name="prod">
        <!-- Main 로그 (INFO 이상) -->
        <appender name="MAIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/main.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/main.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- Error 로그 (ERROR 이상) -->
        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/error.log</file>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>ERROR</level>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/error.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- Access 로그 (ACCESS_LOG 로거 전용) -->
        <appender name="ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/access.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/access.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- ACCESS_LOG 로거 설정 (Prod) -->
        <logger name="ACCESS_LOG" level="INFO" additivity="false">
            <appender-ref ref="ACCESS_FILE"/>
            <appender-ref ref="MAIN_FILE"/>
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Root 로거 설정 (Prod) -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="MAIN_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- PROD가 아닐 때 (Local, Dev 등) -->
    <springProfile name="!prod">
        <!-- ACCESS_LOG 로거 설정 (Non-Prod) -->
        <logger name="ACCESS_LOG" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Root 로거 설정 (Non-Prod) -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>
